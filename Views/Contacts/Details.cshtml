@{
  Layout = "_Layout";
}

<div class="jumbotron text-center">
  <h1>Address Book</h1>
</div>
<div class="well text-center">
  <h3>Contact Details</h3><br>
  <p><u>Name:</u> @Model.GetName()</p>
