@{
  Layout = "_Layout";
}

<div class="jumbotron text-center">
  <h1>Address Book</h1>
</div>
<div class="well text-center">
  <h3>Welcome to your Address Book!</h3><br>
  <h3><u>All Contacts</u></h3>
  @if (@Model.Count == 0)
  {
    <h4>No Contacts have been added yet!</h4>
  }
  @foreach (var contact in Model)
  {
    <h3><a href="/contacts/@contact.GetId()">@contact.GetName()</a></h3>
  }
  <h4><a href="/contacts/new">Add New Contact</a></h4>
  <form action="/contacts/clear" method="post">
    <button type="submit" class="btn btn-success">Clear Contact List</button>
  </form>
</div>
